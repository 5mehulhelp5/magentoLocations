<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="custom_options">
        <settings>
            <label translate="true">Opciones de sucursal</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="custom_sucursal" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">sucursales</label>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="LeanCommerce\LocationGrid\Model\Source\Locations"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
</form>
